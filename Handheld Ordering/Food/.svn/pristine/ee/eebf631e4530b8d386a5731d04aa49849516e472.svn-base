<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <RelativeLayout
        style="@style/fill"
        android:layout_above="@+id/layoutBottom" >

        <RelativeLayout
            android:id="@+id/layoutTop"
            android:layout_width="fill_parent"
            android:layout_height="50dp" >

            <Button
                android:id="@+id/btnOverOperation"
                style="@style/login_button"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_cancel"
                android:text="@string/operation_over"
                android:textColor="#ffffffff" />

            <Button
                android:id="@+id/btnBack"
                style="@style/login_button"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_login"
                android:text="@string/back" />
        </RelativeLayout>

        <!--<com.alex.food.view.ScrollLayout
            android:id="@+id/scrollLayout"
            style="@style/fill"
            android:layout_below="@+id/layoutTop"
            android:layout_marginBottom="20dp" />-->
        <GridView
            android:id="@+id/categoryGridView"
            style="@style/fill"
            android:layout_below="@+id/layoutTop"
            android:layout_marginBottom="20dp"
            android:cacheColorHint="#00000000"
            android:listSelector="#00000000"
            android:numColumns="4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutBottom"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white" >

        <ListView
            android:id="@+id/listView"
            style="@style/fill"
            android:layout_above="@+id/relativeLayout"
            android:cacheColorHint="#00000000"
            android:listSelector="#00000000" />

        <LinearLayout
            android:id="@+id/relativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/light_blue"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btnkeyPan"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_keypan"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnSendOrder"
                style="@style/login_button"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_login"
                android:text="@string/send_order"
                android:layout_weight="0.83" />

            <LinearLayout
                style="@style/fill"
                android:orientation="horizontal"
                android:visibility="invisible"
                android:layout_width="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/wrap"
                        android:text="@string/total"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView
                        style="@style/wrap"
                        android:layout_marginTop="2dp"
                        android:text="@string/total_price"
                        android:textColor="@color/black"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    style="@style/wrap_fill"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvTotal"
                        style="@style/wrap"
                        android:layout_marginLeft="30dp"
                        android:text="$0.00"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tvTotalPrice"
                        style="@style/wrap"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="2dp"
                        android:text="$0.00"
                        android:textColor="@color/black"
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <include
        android:id="@+id/calculateLayout"
        layout="@layout/calculate"
        android:visibility="gone" />

</RelativeLayout>