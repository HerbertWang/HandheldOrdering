<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_gray" >

    <ScrollView
        style="@style/fill"
        android:layout_above="@+id/relativeLayout"
        android:scrollbars="none" >

        <LinearLayout
            style="@style/fill"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical" >

            <TextView
                style="@style/setting_text"
                android:layout_marginTop="20dp"
                android:text="IP地址" />

            <EditText
                android:id="@+id/etIpAddress"
                style="@style/setting_input_box" />

            <TextView
                style="@style/setting_text"
                android:text="Shop ID" />

            <EditText
                android:id="@+id/etShopId"
                style="@style/setting_input_box"
                android:digits="0123456789" />

            <TextView
                style="@style/setting_text"
                android:text="Account ID" />

            <EditText
                android:id="@+id/etAccountId"
                style="@style/setting_input_box"
                android:digits="0123456789" />

            <TextView
                style="@style/setting_text"
                android:text="改码 Category ID" />

            <EditText
                android:id="@+id/etCategoryId"
                style="@style/setting_input_box" />

            <TextView
                style="@style/setting_text"
                android:text="Rounding Method" />

            <TextView
                android:id="@+id/tvRoundingMethod"
                style="@style/setting_input_box"
                android:gravity="center_vertical"
                android:text="Round" />

            <TextView
                style="@style/setting_text"
                android:text="Decimal Place" />

            <EditText
                android:id="@+id/etDecimalPlace"
                style="@style/setting_input_box"
                android:digits="0123456789" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" >

        <Button
            android:id="@+id/btnCancel"
            style="@style/login_button"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_cancel"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/btnConfirm"
            style="@style/login_button"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp" />
    </RelativeLayout>

</RelativeLayout>